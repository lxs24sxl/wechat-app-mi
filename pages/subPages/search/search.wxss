/* pages/subPages/search/search.wxss */
Page {
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.container {
  background-color: #ebebeb;
}
.search-top-outer {
  height: 84rpx;
  width: 100vw;
  background-color: #ff6700;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}
.search-top-left {
  -webkit-box-flex: 1;
  -webkit-flex: 1 1 auto;
  flex: 1 1 auto;
  margin-left: 12rpx;
  height: 58rpx;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -ms-flex-direction: row;
  flex-direction: row;
  align-items: center;
  border-radius: 6rpx;
}
.icon-search {
  margin:0 10rpx;
}
.search-input {
  font-size: 30rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1 1 auto;
  flex: 1 1 auto;
}
.icon-clear-wrap {
  height: inherit;
  width: 58rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon-clear {
  height: 50rpx;
  width: 50rpx;
}
/*顶部右边  */
.search-top-right {
  height: 58rpx;
  width: 110rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-title {
  font-size: 30rpx;
  color: #fff;

}
/*热门搜索区域  */
.popular-search-box {
  width: 100vw;
  margin: 32rpx 10rpx;
}
.popular-search-box::before, .popular-search-box::after {
  content: "";
  display: table;
}
.popular-search-box::after {
  clear: both;
}
.pop-search-wrap {
  float: left;
  height: 46rpx;
  width: auto;
  background-color: #fff;
  margin-left: 14rpx;
  margin-bottom: 14rpx; 
  border: 1px solid #dadada;
}
.pop-search-title {
  padding: 10rpx 16rpx 16rpx;
  font-size: 24rpx;
}
/*搜索历史  */
.xs-left {
  padding: 0 24rpx;
}
.popular-search-box {
  width: 100vw;
}
.box-hd {
  width: 100%;
  height: 60rpx;
}
.box-hd-title {
  line-height: 60rpx;
  font-size: 26rpx;
  color: #8c8c8c;
}
.box-bd {
  background-color: #fff;
}
.box-bd-item {
  height: 100rpx;
  border-bottom: 1px solid #f2f2f2;
}
.box-bd-title {
  line-height: 100rpx;
  height: inherit;
  font-size: 28rpx;
  color: #1d1d1d;
}
.box-bd-title.clear-history {
  color: #465c89;
}
.box-bd-item.clear-history-wrap {
  text-align: center;
}
/*关键字搜索区  */
.search-key-list {
  position: absolute;
  left: 0;
  top: 84rpx;
  background-color: #fff;
  width: 100%;
}
.result-list {
  border-top: 2rpx solid #ebebeb;
}
.result-item {
  width: 94vw;
  height: 100rpx;
  margin:0 3vw ;
  border-top: 2rpx solid #e5e5e5;
}
.result-item:first-child {
  border-top: none;
}
.result-title {
  height: inherit;
  line-height: 100rpx;
  font-size: 28rpx;
}
/*搜索结果展示框  */
.search-return-list {
  position: absolute;
  left: 0;
  top: 84rpx;
  background-color: #fff;
  width: 100%;
}
.return-list {
  border-top: 2rpx solid #ebebeb;
}
.return-item {
  width: 92vw;
  height: 164rpx;
  padding: 30rpx 0;
  margin: 0 4vw;
  border-top: 2rpx solid #e5e5e5;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
}
.return-item:first-child {
  border-top: none;
}
.item-img-wrap {
  height: inherit;
  width: 164rpx;
}
.item-img {
  height: inherit;
  width: 164rpx;
}
.item-content-box {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -ms-flex-direction: column;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 12rpx;
}
.item-name {
  font-size: 30rpx;
}
.item-brief {
  font-size: 24rpx;
  color: #b4b4b4;
  line-height: 40rpx;
  overflow: hidden;
  -ms-text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item-price {
  position: relative;
  font-size: 34rpx;
  color: #ff6700;
  padding-left: 26rpx;
}
.item-price::before {
  content: "\A5";
  position: absolute;
  left: 0;
  top: 0;
  font-size: 36rpx;
  text-decoration: none;
}